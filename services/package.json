{
  "name": "coinbreakr-services",
  "version": "1.0.0",
  "description": "CoinBreakr API services with authentication",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "test:performance": "jest --testPathPattern=performance",
    "test:smoke": "jest --testPathPattern=smoke",
    "test:edge-cases": "jest --testPathPattern=edge-cases",
    "test:database": "jest --testPathPattern=database",
    "test:all": "jest --verbose",
    "test:run": "node tests/run-tests.js",
    "test:run-smoke": "node tests/run-tests.js --smoke",
    "test:run-integration": "node tests/run-tests.js --integration",
    "test:run-performance": "node tests/run-tests.js --performance",
    "test:run-edge-cases": "node tests/run-tests.js --edge-cases",
    "test:run-database": "node tests/run-tests.js --database",
    "test:run-load": "node tests/run-tests.js --load",
    "test:run-stress": "node tests/run-tests.js --stress",
    "test:artillery": "artillery run tests/performance/artillery.config.yml",
    "test:artillery-dev": "artillery run tests/performance/artillery.config.yml -e development",
    "test:load": "jest --testPathPattern=load --verbose",
    "test:stress": "jest --testPathPattern=stress --verbose",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "keywords": [
    "nodejs",
    "mongodb",
    "authentication",
    "jwt"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.1",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.1",
    "faker": "^6.6.6",
    "artillery": "^2.0.0"
  }
}
